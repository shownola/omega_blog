<div class="new-container1 h-100 show-bg">
  <% if @article.user %>
 <div align="center" class="gravatar-size">
   <%= link_to gravatar_for(@article.user), user_path(@article.user), size: 150 if @article.user %>
 </div>
  
  <p><h4 class="display-5" align="center">Created by: <%= @article.user.username %> <%= time_ago_in_words(@article.created_at) %> ago</h4></p>
  
  <section class="container">
    <p><h1 class="display-3">Title:</h1><%= @article.title %></p>
    

    <p><h1 class="display-3">Description:</h1> <%= @article.description %></p>
    
    <% if @article.categories.any? %>
      <p><h3>Categories: </h3><%= render @article.categories %></p>
    <% end %>
  </section>
  <% end %>
  
    
  
  <p class="text-center home-links col">
  <% if logged_in? && (current_user == @article.user || current_user.admin?) %>
    <%= link_to 'Edit Article', edit_article_path(@article), class: 'a-link' %> |
    <%= link_to 'Delete Article', article_path(@article), method: :delete, data: { confirm: 'Are you sure you want to delete this article?' }, class: 'a-link' %> 
  <% end %>|
    <%= link_to 'Back to articles', articles_path, class: 'a-link' %>
  </p>
</div>






 