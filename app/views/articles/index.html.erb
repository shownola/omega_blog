<div class="container index-container">
  
  <h1 class="text-center display-2">List of Articles</h1>
  
  <%= link_to 'Create a new article', new_article_path, class: 'a-link' %>
  
  <table class="table table-striped">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Created By</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  
  
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article_path(article) %></td>
        <td><%= truncate(article.description, length: 75) %></td>
        <td class="article-link"><%= article.user.username if article.user%></td>
        <!--<td><%= link_to 'Show', article_path(article) %></td>-->
      <% if logged_in? && current_user == article.user %>
        
        <td><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_article_path(article), class: 'icon' %></td>
        <td><%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, article_path(article), method: :delete, data: {confirm: 'Are you sure you want to delete this article?' }, class: 'icon' %></td>
        
      <% end %>  
        
      </tr>
   <% end %>
  
  </table>
  
   <div align="center">
    <%= will_paginate %>
  </div>
  

</div>