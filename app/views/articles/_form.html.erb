

<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@article, :html => { class: 'form-horizontal', role: 'form' } ) do |f| %>
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :title %>
      </div>
      <div class="col-md-10">
        <%= f.text_field :title, class: 'form-control' %>
      </div>
    </div>
    
     <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :description %>
      </div>
      <div class="col-md-10">
        <%= f.text_area :description, rows: 10, class: 'form-control' %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="row">
        <div class="col-md-offset-2 col-md-8">
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
            <% cb.label(class: 'form-check-inline input_checkbox') { cb.check_box(class: 'checkbox') + cb.text } %>
          <% end %>
        </div>
      </div>
    </div>
    
    <!--<div class="form-group">-->
    <!--  <div class="control-label col-md-2">-->
    <!--    <%= f.label :category %>-->
    <!--  </div>-->
    <!--  <div class="col-md-10">-->
    <!--    <%= f.collection_select :category_ids, Category.all, :id, :name, prompt: true, class: 'form-control' %>-->
    <!--  </div>-->
    <!--</div>-->
    
    <div class="form-group">
      <div class="col-md-4">
        <%= f.submit class: 'btn btn-lg' %>
      </div>
    </div>
    <% end %>
    
    <div class="text-center home-links col">
      [ <%= link_to 'Cancel request and return to articles', articles_path, class: 'a-link' %> ]
    </div>
  </div>
</div>



