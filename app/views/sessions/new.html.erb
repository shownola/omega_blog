
<div class="new-container">
<h1 align="center">Log in</h1>

<div class="container">

 <%= form_for(:session, :html => { class: 'form-horizontal', role: 'form' }, url: login_path ) do |f| %>
      
      
       <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :email %>
        </div>
        <div class="col-md-10">
          <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email' %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :password %>
        </div>
        <div class="col-md-10">
          <%= f.password_field :password, class: 'form-control', autocomplete: 'off' %>
        </div>
      </div>
      
      
      <div class="form-group">
        <div class="col-md-4">
          <%= f.submit 'Log in',  class: 'btn btn-lg' %>
        </div>
      </div>
      <% end %>
      
      <div class="text-center home-links col">
        [ <%= link_to 'Cancel request and return to articles', articles_path, class: 'a-link' %> ]
      </div>
  </div> 
</div>