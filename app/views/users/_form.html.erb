<div class="row">
    <div class="col-md-12">
      <%= form_for(@user, :html => { class: 'form-horizontal', role: 'form' } ) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :username %>
        </div>
        <div class="col-md-10">
          <%= f.text_field :username, class: 'form-control', placeholder: 'Enter username' %>
        </div>
      </div>
      
       <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :email %>
        </div>
        <div class="col-md-10">
          <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email' %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :password %>
        </div>
        <div class="col-md-10">
          <%= f.password_field :password, rows: 10, class: 'form-control', placeholder: 'Enter password' %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :password_confirmation %>
        </div>
        <div class="col-md-10">
          <%= f.password_field :password_confirmation, rows: 10, class: 'form-control', placeholder: 'Reenter password' %>
        </div>
      </div>
      
      
      
      <div class="form-group">
        <div class="col-md-4">
          <%= f.submit class: 'btn btn-lg' %>
        </div>
      </div>
      <% end %>
      
      <div class="text-center home-links col">
        [ <%= link_to 'Cancel request and return to articles', articles_path, class: 'a-link' %> ]
      </div>
    </div>
  </div>
