<div class="container new-container">
  <h1 align="center">List of All Users</h1>
    <% @users.each do |user| %>
    <ul class="listing">
      <div class="row" align="center">
        <div class="card col-md-4 col-md-offset-4 mx-auto">
          <li><%= link_to gravatar_for(user), user_path(user), size: 120 %></li>
          <li class="article-title"><%= link_to user.username.titleize, user_path(user) %></li>
          <li><small><%= pluralize(user.articles.count, 'article') if user.articles %></small></li>
        </div>
      </div>
    </ul>
    <% end %>
    
    <div align="center">
    <%= will_paginate %>
  </div>
</div>




 