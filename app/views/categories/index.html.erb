<div class="container new-container">
  <h1 class="display-3" align="center">All Categories</h1>
  
   
     
     <% @categories.each do |category| %>
     <ul class="listing">
       <div class="row" align="center">
         <div class="card col-md-4 col-md-offset-4 mx-auto d-flex align-items-center justify-content-center">
           <li class="article-title">
            <h4> <%= link_to "#{category.name}", category_path(category) %></h4>
           </li>
           <li><small><%= pluralize(category.articles.count, 'article') %></small></li>
           <% if logged_in? && current_user.admin? %>
           <li><small><%= link_to 'Edit Category', edit_category_path(category) %> | <%= link_to 'Delete', category_path(category), method: :delete, data: {confirm: 'Are you sure you want to delete?'} %></small></li>
           <% end %>
         </div>
       </div>
     </ul>
     <% end %>
</div>