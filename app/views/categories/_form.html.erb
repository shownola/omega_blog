 <%= render 'shared/errors', obj: @category %>


  <div class="row">
      <div class="col-md-12">
        <%= form_for(@category, :html => { class: 'form-horizontal', role: 'form' } ) do |f| %>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :name %>
          </div>
          <div class="col-md-10">
            <%= f.text_field :name, class: 'form-control', placeholder: 'Enter category name', autofocus: true %>
          </div>
        </div>
        
        
        <div class="form-group">
          <div class="col-md-4">
            <%= f.submit class: 'btn btn-lg' %>
          </div>
        </div>
        <% end %>
        
        <div class="text-center home-links col">
          [ <%= link_to 'Cancel request and return to categories', categories_path, class: 'a-link' %> ]
        </div>
      </div>
    </div>